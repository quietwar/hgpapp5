<header>
  <body>
    <div class=page>
      <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">

          <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
           <ul class="nav navbar-nav">
                 <li class="active"><%= link_to "Home", root_path %></li>
                 <li class="active"><%= link_to "Genius Lounge - Staff only", admin_login_path %></li>
                 <li class="active"><%= link_to "HGP Events", event_path(:calendar_id) %></li>
                 <li class="active"><%= link_to "Calendar", calendars_path %></li>
                 <li class="active"><a href="contact">Contact</a></li>
             <% unless logged_in? %>
                <li class="active"><%= link_to "Genius sign up", new_user_registration_path %></li>
                <li class="active"><%= link_to "Tap in",  new_user_session_path %></li>
             <% else %>
                <li class="active"><%= link_to "My Lab", projects_path(:user_id) %></li>
                <li class="active"><%= link_to "Tap out", destroy_user_session_path %></li>
                <li class="active"><%= link_to "Staff Tap out", destroy_admin_user_session_path %></li>
                <div class="navbar-right signed-in-user">
                  <p class="navbar-text">
                    Signed in as <%= "#{current_user.email}" %>
                  </p>
                </div>
              <% end %>

             <li class="active">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">Featured Geniuses
                <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="isaiah">Isaiah</a></li>
                  <li><a href="george">George</a></li>
                  <li><a href="malik">Malik</a></li>
                </ul>
              </li>
           </ul>
         </div>
           <%= form_tag(search_classrooms_path,
                           class: "navbar-form navbar-left",
                           role: "search") do %>
               <div class="form-group">
                 <%= text_field_tag :search_name, nil, placeholder:
                         "Search for Geniuses", class: "form-control"  %>
               </div>
               <%= submit_tag "Search", class: 'btn btn-default' %>
             <% end %>
             <div class="logo">
               <img border="0" alt="HGP Website" src="/assets/HGPAssets_Emblem_Black.png" width="100" height="100">
            </div>

             <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">

           </div>

             <br>
             <div class="navbar-header">
                 <h1 class="brand-heading">The Hidden Genius Project</h1>
             </div>
           </ul>
     </nav>
   </header>
 </div>
</body>
